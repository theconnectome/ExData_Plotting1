! URxvt Settings ------------------------------------------------------------
URxvt*dynamicColors: on
URxvt*internalBorder: 7
URxvt*iso14755: false
URxvt*depth: 30
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: false
URxvt*savelines: 1024
URxvt*shading: 60
URxvt*letterSpace: -1
URXvt*geometry: 80x30

! font settings --------------------------------------------------------------

Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintfull
!Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault


! URxvt Fonts ----------------------------------------------------------------
URxvt*font:                 xft:DejaVuSansMono:regular:size=8
URxvt*imFont:               xft:DejaVuSansMono:regular:size=8
URxvt*boldFont:             xft:DejaVuSansMono:bold:size=8
URxvt*italicFont:           xft:DejaVuSansMono-Oblique:size=8
URxvt*boldItalicFont:       xft:DejaVuSansMono-Oblique:bold:size=8


*background: #140b0b
*foreground: #ddeedd

